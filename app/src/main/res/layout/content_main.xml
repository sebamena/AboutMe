                android:paddingBottom="16dp"/>

            <TextView
                android:layout_below="@+id/uno"
                android:layout_alignParentRight="true"
                android:id="@+id/cuatro"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
